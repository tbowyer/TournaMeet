<div class="booyah-box col-xs-10 col-xs-offset-1">
	<h1> Enter your Tournament Details </h1>
	<%= simple_form_for @tournament do |f| %>
    	<%= f.input :name %>
    	<%= f.input :address %>
    	<%= f.input :game %> 
    	<%= f.input :description %>
    	<br />

    	<%= f.submit 'Create', :class => 'btn btn-primary' %>
    	<br />
  	<% end %>
  	<br />
</div>

